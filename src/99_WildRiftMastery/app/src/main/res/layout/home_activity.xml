<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/header_activity"></include>

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:background="@color/panelGelap"
            android:clickable="true">

            <ImageView
                android:id="@+id/logoHeader"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/logo" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/champion"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/header"
            android:layout_marginTop="7dp"
            android:background="@color/panelAbu"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/championImage"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/hero" />

            <TextView
                android:id="@+id/textChamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Champion"
                android:textColor="@color/text"
                android:textSize="40dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/champion"
            android:layout_marginTop="23dp"
            android:background="@color/panelAbu"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                app:srcCompat="@drawable/item" />

            <TextView
                android:id="@+id/textItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Item"
                android:textColor="@color/text"
                android:textSize="40dp"
                tools:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sound"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:background="@color/panelAbu"
            android:layout_below="@id/item"
            android:layout_marginTop="15dp"
            android:clickable="true">

            <ImageView
                android:id="@+id/soundImage"
                android:layout_width="70dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="80dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/sound" />

            <TextView
                android:id="@+id/textSound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voice"
                android:textSize="40dp"
                android:textColor="@color/text"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wallpaper"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:background="@color/panelAbu"
            android:layout_below="@id/sound"
            android:layout_marginTop="15dp"
            android:clickable="true">

            <ImageView
                android:id="@+id/wallpaperImage"
                android:layout_width="100dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/wildrift" />

            <TextView
                android:id="@+id/textWallpaper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallpapers"
                android:textSize="40dp"
                android:textColor="@color/text"
                android:layout_gravity="center"/>

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <include layout="@layout/footer_activity"></include>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

